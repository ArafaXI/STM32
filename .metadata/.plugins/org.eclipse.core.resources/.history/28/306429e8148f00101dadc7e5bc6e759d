I2C_HandleTypeDef hi2c1;

TIM_HandleTypeDef htim2;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_TIM2_Init(void);
static void MX_I2C1_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
volatile uint8_t state = 0;
char buf[64];
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
	/* MCU Configuration--------------------------------------------------------*/
	  HAL_Init();
	  SystemClock_Config();

	  /* Initialize all configured peripherals */
	  MX_GPIO_Init();
	  MX_USART2_UART_Init();
	  MX_TIM2_Init();
	  MX_I2C1_Init();

	  /* USER CODE BEGIN 2 */
	  HAL_GPIO_WritePin(GPIOA, GPIO_PIN_0, GPIO_PIN_SET);

	  // Initialize LSM6DSO context
	  stmdev_ctx_t dev_ctx;
	  dev_ctx.write_reg = platform_write;
	  dev_ctx.read_reg = platform_read;
	  dev_ctx.mdelay = platform_delay;
	  dev_ctx.handle = &hi2c1;

	  // Check I2C communication
	  if (HAL_I2C_IsDeviceReady(&hi2c1, LSM6DSO_I2C_ADD_L << 1, 3, 1000) != HAL_OK) {
	      platform_write_debug("I2C device not ready!\r\n");
	      Error_Handler();
	  }

	  // Check device ID
	  uint8_t whoami = 0;
	  if (lsm6dso_device_id_get(&dev_ctx, &whoami) != 0) {
	      platform_write_debug("Error reading WHOAMI\r\n");
	      Error_Handler();
	  }

	  if (whoami != LSM6DSO_ID) {
	      sprintf(buf, "WHOAMI mismatch: 0x%02X (expected 0x%02X)\r\n", whoami, LSM6DSO_ID);
	      platform_write_debug(buf);
	      Error_Handler();
	  }
	  platform_write_debug("LSM6DSO detected!\r\n");

	  // Perform software reset
	  lsm6dso_reset_set(&dev_ctx, PROPERTY_ENABLE);
	  platform_delay(50); // Wait for reset
	  lsm6dso_reset_set(&dev_ctx, PROPERTY_DISABLE);

	  // Enable block data update (recommended)
	  lsm6dso_block_data_update_set(&dev_ctx, PROPERTY_ENABLE);

	  // Configure accelerometer (required for temperature data)
	  lsm6dso_xl_data_rate_set(&dev_ctx, LSM6DSO_XL_ODR_12Hz5); // 12.5 Hz
	  lsm6dso_xl_full_scale_set(&dev_ctx, LSM6DSO_2g);          // Â±2g full scale

	  // Wait for sensor to stabilize
	  platform_delay(100);

	  // Verify configuration by reading control register
	  uint8_t ctrl1_xl = 0;
	  lsm6dso_read_reg(&dev_ctx, LSM6DSO_CTRL1_XL, &ctrl1_xl, 1);
	  sprintf(buf, "CTRL1_XL: 0x%02X\r\n", ctrl1_xl);
	  platform_write_debug(buf);

	  /* USER CODE END 2 */

	  /* Infinite loop */
	  /* USER CODE BEGIN WHILE */
  while (1)
  {

    /* USER CODE END WHILE */
	  int16_t temp_raw;
	        float temp_degC;

	        // Check status register for data availability
	        lsm6dso_status_reg_t status;
	        if (lsm6dso_status_reg_get(&dev_ctx, &status) != 0) {
	            platform_write_debug("Error reading status register\r\n");
	        } else if (status.tda) {
	            // Read raw temperature
	            if (lsm6dso_temperature_raw_get(&dev_ctx, &temp_raw) != 0) {
	                platform_write_debug("Error reading temperature\r\n");
	            } else {
	                // Convert to Celsius
	                temp_degC = lsm6dso_from_lsb_to_celsius(temp_raw);
	                sprintf(buf, "Raw temp: 0x%04X (%d), Temp: %.2f C\r\n", temp_raw, temp_raw, temp_degC);
	                platform_write_debug(buf);
	            }
	        } else {
	            platform_write_debug("Temperature data not available\r\n");
	        }
  /* USER CODE END 3 */
}
}
/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 16;
  RCC_OscInitStruct.PLL.PLLN = 336;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV4;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

